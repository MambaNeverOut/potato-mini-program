<!--pages/_home/_home.wxml-->
<view class="home-container">
	<scroll-view class="todoList" scroll-y="true">
		<view class="item" wx:for="{{lists}}" wx:key="{{item.id}}" wx:for-index="index" data-index="{{index}}" bindtap="destoryTodo">
			<view class="select {{item.finished && 'active'}}"></view>
			<text>{{item.text}}</text>
		</view>
	</scroll-view>
	<t-button text="创建任务" size="mini" type="change" bindtap="showConfirm"></t-button>
	<view class="tomato-wrapper">
		<navigator class="tomato" url="/pages/tomato/tomato">
			<t-clock text="点击开始闹钟"></t-clock>
		</navigator>
	</view>
	<t-confirm visible="{{visibleConfirm}}" placeholder="完成了什么任务" bindconfirm="createConfirm" bindcancel="hideConfirm"></t-confirm>
</view>