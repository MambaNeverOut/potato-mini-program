<!--pages/_home/_home.wxml-->
<view class="home-container">
	<scroll-view class="todoList" scroll-y="true">
		<view class="item" wx:for="{{lists}}" wx:key="{{item.id}}" wx:for-index="index" data-index="{{index}}" data-id="{{item.id}}" wx:if="{{!item.completed}}"  >
			<view class="select {{item.completed && 'active'}}" data-index="{{index}}" data-id="{{item.id}}" bindtap="destoryTodo"></view>
			<text data-index="{{index}}" data-id="{{item.id}}" bindtap="changeText"
			data-content="{{item.description}}">{{item.description}}</text>
		</view>
	</scroll-view>
	<t-button text="创建任务" size="mini" type="change" bindtap="showCreateConfirm"></t-button>
	<view class="tomato-wrapper">
		<navigator class="tomato" url="/pages/tomato/tomato">
			<t-clock text="点击开始闹钟"></t-clock>
		</navigator>
	</view>
	<t-confirm visible="{{visibleCreateConfirm}}" placeholder="完成了什么任务" bindconfirm="createConfirm" bindcancel="hideCreateConfirm"></t-confirm>
	<t-confirm visible="{{visibleUpdateConfirm}}" value="{{updateContent}}" bindconfirm="updateTodo" bindcancel="hideUpdateConfirm"></t-confirm>
</view>