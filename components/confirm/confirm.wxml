<view class="container" wx:if="{{visible}}">
  <view class="confirm">
    <textarea class="textarea" placeholder="{{placeholder}}" value="{{value}}" bindinput="watchValue"></textarea>
    <view class="actions">
      <view class="action" hover-class="active" class="sure" bindtap="confirm">确定</view>
      <view class="action" hover-class="active" bindtap="cancel">取消</view>
    </view>
  </view>
</view>
